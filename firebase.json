{
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "functions": {
      "source": "firebase/functions",
      "runtime": "nodejs20",
      "timeoutSeconds": 540,
      "memory": "2GB",
      "minInstances": 0,
      "maxInstances": 10
    },
    "hosting": {
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  }